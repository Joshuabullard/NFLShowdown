@model IEnumerable<DataLibrary.Models.NFLHistory>

@{
    ViewBag.Title = "Pick History";
}

<h2></h2>

<table class="table">
    <tr>
        <th>
            Home 
        </th>
        <th>
            Away
        </th>
        <th>
            Winner
        </th>
        <th>
            Pick
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HomeTeam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AwayTeam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Winner)
        </td>

        @if (item.Winner == null)
        {
            <td>
                @Html.DisplayFor(modelItem => item.GamePick)
            </td>
        }
        else
        {
            if (item.GamePick == null)
            {
                <td>  ---  </td>
            }
            else
            {
                if (item.Winner == "TIE")
                {
                <td style="background-color: grey;">
                    @Html.DisplayFor(modelItem => item.GamePick)
                </td>
                }
                else
                {
                    if (item.Winner == item.GamePick)
                    {
                    <td style="background-color: green;">
                        @Html.DisplayFor(modelItem => item.GamePick)
                    </td>
                    }
                    else
                    {
                    <td style="background-color: red;">
                        @Html.DisplayFor(modelItem => item.GamePick)
                    </td>
                    }
                }
            }
        }







    </tr>
}

</table>
<br />
<br />
<p><a class="btn btn-default" @Html.ActionLink("Go Back »", "PickHistory") </a></p>