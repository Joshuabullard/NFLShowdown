@model IEnumerable<DataLibrary.Models.NFLLeaderboard>

@{
    ViewBag.Title = "Pick History";
}

<h2>Pick History</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Week)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Losses)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Week)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wins)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Losses)
        </td>
        <td>
            @Html.ActionLink("View Picks", "ViewPicks", new {week = item.Week})
        </td>
    </tr>
}

</table>
